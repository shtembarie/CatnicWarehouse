<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/indice_progress_background</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="TitleNormalBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="TitleNormalBlack12">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>
    <style name="BodyNormalBlack">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/dark_grey_50</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/orange_rounded_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">1.3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TransparentButton" parent="BaseButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/blood_orange</item>
    </style>

    <style name="OutlineButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/orange_round_border</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">1.3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="OutlineButtonWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/white_round_border</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">1.3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OutlineDisabledButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/disabled_round_border</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">1.3sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BaseDisabledButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/grey_rounded_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">1.3sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActivate</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactivate</item>
    </style>

    <style name="BottomNavigationTextActivate">
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BottomNavigationTextInactivate">
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textSize">12sp</item>
    </style>




    <style name="CatnicToolbarBackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/dialog_background</item>
    </style>
</resources>