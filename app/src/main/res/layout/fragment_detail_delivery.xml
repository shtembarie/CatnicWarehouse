<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incoming.deliveries.presentation.fragment.DeliveryFragment">

    <include
        android:id="@+id/delivery_header"
        layout="@layout/header_view_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/delivery_code"
                layout="@layout/detail_delivery_section" />

            <include
                android:id="@+id/delivery_date"
                layout="@layout/detail_delivery_section" />

            <include
                android:id="@+id/delivery_suppliers"
                layout="@layout/detail_delivery_section" />

            <include
                android:id="@+id/delivery_article"
                layout="@layout/detail_delivery_section" />

<!--            <include-->
<!--                android:id="@+id/delivery_note"-->
<!--                layout="@layout/detail_delivery_section" />-->
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_button_orange_corner_4"
        android:text="@string/delivery_overview_complete_delivery"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/incl_progress_panel"
        layout="@layout/full_screen_progress_panel" />
</androidx.constraintlayout.widget.ConstraintLayout>