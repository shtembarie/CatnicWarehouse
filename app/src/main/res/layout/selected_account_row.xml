<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/manuel_input_section"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/roundRelativeLayout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/very_light_grey">

                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_hand" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/status_dot_view"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@color/blue"
                    android:visibility="gone"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/dark_grey" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dataLinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/robotoregular"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="@string/manuel_input" />

                <TextView
                    android:id="@+id/manuel_article_nbr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/robotoregular"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/dark_grey_48"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:text="Article Number" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.1"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_to_right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:alpha="0.12"
            android:background="@color/black"
           />

    </RelativeLayout>

</layout>