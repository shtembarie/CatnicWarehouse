<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <View
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:background="@drawable/rounded_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/start_scanning"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="22sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/scanningInfoIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:tint="@color/white"
        android:padding="2dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/blood_orange"
        app:civ_circle_background_color="@color/white"
        android:src="@drawable/baseline_question_mark_24"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/barcodeScanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="26dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/barcodeIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/barcode_scan_leading_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/barocdeScanOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                android:text="@string/barode_device_scanning"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/normalDeliveryIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/checkBarcodeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/baseline_check_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/blood_orange" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/scanningCameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/scanningCameraIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/camera_scan_leading_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cameraOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableEnd="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                android:text="@string/scanning_with_camera"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/checkCameraIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/baseline_check_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/blood_orange" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/manualInputButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/manualInputIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/manual_scan_leading_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/returnOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableEnd="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                android:text="@string/manual_input"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/checkManualInputIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/baseline_check_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/blood_orange" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/buttonContinue"
        style="@style/BaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="30dp"
        android:paddingVertical="12dp"
        android:text="@string/continue_delivery"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/buttonBack"
        style="@style/TransparentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/blood_orange" />

</LinearLayout>