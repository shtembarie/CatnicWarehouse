<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:paddingVertical="36dp"
    android:padding="24dp">

    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="6dp"
        android:background="@drawable/rounded_grey"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/barcode_image"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:layout_marginTop="16dp"
        android:src="@drawable/gruppo_finalize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintBottom_toTopOf="@+id/title_popup_finalize" />

    <TextView
        android:id="@+id/title_popup_finalize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="2.7sp"
        android:text="@string/finalize_stockyard_1_inventory"
        android:textColor="@color/dark_grey"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_image" />

    <TextView
        android:id="@+id/description_popup"
        android:layout_width="314dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/robotoregular"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="4sp"
        android:text="@string/are_you_sure_you_want_to_finalize_the_inventory_process_of_this_stockyard"
        android:textColor="@color/gray_text_color"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_popup_finalize" />

    <include
        android:id="@+id/location_section_v"
        layout="@layout/location_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_popup" />

    <include
        android:id="@+id/total_amount_section"
        layout="@layout/total_amount_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_section_v" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/total_amount_section">

    <TextView
        android:id="@+id/newIncomingButton"
        style="@style/BaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="10dp"
        android:text="@string/finalize" />

    <TextView
        android:id="@+id/backButton"
        style="@style/TransparentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="@string/cancel"
        android:textColor="@color/blood_orange" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
