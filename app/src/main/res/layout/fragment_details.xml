<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".packing.finalisePackingList.presentation.fragment.DetailsFragment">

        <TextView
            android:id="@+id/generalDetailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F3F3"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:text="@string/general_details"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <include
            android:id="@+id/detailRow1"
            layout="@layout/detail_row_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />

        <include
            android:id="@+id/detailRow2"
            layout="@layout/detail_row_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />


        <include
            android:id="@+id/detailRow3"
            layout="@layout/detail_row_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />


        <include
            android:id="@+id/detailRow4"
            layout="@layout/detail_row_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />


        <TextView
            android:id="@+id/packingInformationHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F3F3"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:text="@string/packing_information"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <include
            android:id="@+id/detailRow5"
            layout="@layout/detail_row_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400" />


    </LinearLayout>
</ScrollView>