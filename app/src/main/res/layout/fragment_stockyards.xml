<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory.stockyards.presentation.fragment.InventoryFragment">

    <include
        android:id="@+id/inventory_header"
        layout="@layout/header_view_section_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/new_design_element"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/holo_blue"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inventory_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_font"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:text="@string/select_or_scan_a_stockyard_to_start_the_inventory_process"
            android:textColor="@android:color/white"
            android:fontFamily="@font/robotoregular"
            android:paddingStart="8dp"
            android:paddingEnd="50dp" />

    </LinearLayout>
    <include
        android:id="@+id/no_inventory"
        layout="@layout/no_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/scanStockyardsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_header"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInventory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/scanStockyardsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_design_element"
        tools:listitem="@layout/inventories" />


    <LinearLayout
        android:id="@+id/scanStockyardsButton"
        style="@style/BaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBack">

        <TextView
            android:id="@+id/scanStockyardsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:paddingVertical="12dp"
            android:text="@string/scanStockyards"
            android:textAllCaps="true"
            style="@style/BaseButton"
            app:drawableLeftCompat="@drawable/barcode"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/buttonBack" />
    </LinearLayout>

    <TextView
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="12dp"
        android:layout_marginBottom="16dp"
        android:text="@string/finalize_inventory"
        android:textSize="@dimen/_11sdp"
        android:textAllCaps="true"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TransparentButton"
        android:visibility="gone"
        android:textColor="@color/blood_orange"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
