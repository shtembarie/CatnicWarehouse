<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/inventory_item_container"
    android:paddingTop="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/ic_inventory"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/main_background"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconBadge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/leading_element" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/inventory_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:maxLines="1"
        android:textColor="@color/item_supplier_title_color"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/supplier_date"
        app:layout_constraintEnd_toStartOf="@+id/info_amount"
        app:layout_constraintStart_toEndOf="@+id/ic_inventory"
        app:layout_constraintTop_toTopOf="@+id/ic_inventory"
        tools:text="Artikel-Nr. {id}" />


    <TextView
        android:id="@+id/supplier_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/item_text_color"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="@+id/inventory_id"
        tools:text="08.06.2022 at 14:00"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/item_text_color"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/supplier_date"
        app:layout_constraintStart_toStartOf="@+id/supplier_date"
        tools:text="08.06.2022 at 14:00"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/warehouseStockYardInventoryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/item_text_color"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/supplier_date"
        app:layout_constraintStart_toStartOf="@+id/supplier_date"
        tools:text="08.06.2022 at 14:00"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/article_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:layout_marginHorizontal="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ic_arrow"
        app:layout_constraintEnd_toStartOf="@+id/ic_arrow"
        app:layout_constraintTop_toTopOf="@+id/ic_arrow"
        tools:text="10" />
    <TextView
        android:id="@+id/info_actual_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:layout_marginBottom="7dp"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/info_actual_stock"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1,245" />

    <TextView
        android:id="@+id/info_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/info_actual_stock"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1,245" />

    <TextView
        android:id="@+id/info_actual_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/unit_code"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:text="145" />
    <TextView
        android:id="@+id/unit_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.0"
        android:lineSpacingExtra="5.3sp"
        android:textColor="@color/grey_content"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/target_actual_unit"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="145" />
    <TextView
        android:id="@+id/target_actual_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2.3sp"
        android:layout_marginHorizontal="0dp"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/ic_arrow"
        app:layout_constraintEnd_toStartOf="@+id/ic_arrow"
        app:layout_constraintTop_toTopOf="@+id/ic_arrow"
        tools:text="@string/_0"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/target_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2.3sp"
        android:layout_marginHorizontal="0dp"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/ic_arrow"
        app:layout_constraintEnd_toStartOf="@+id/ic_arrow"
        app:layout_constraintTop_toTopOf="@+id/ic_arrow"
        tools:text="@string/_0"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ic_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.1"
        android:contentDescription="@null"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@drawable/ic_to_right_arrow" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
